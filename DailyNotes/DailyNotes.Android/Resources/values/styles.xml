<?xml version="1.0" encoding="utf-8" ?>
<resources>

	<style name="MainTheme" parent="MainTheme.Base"/>

	<!-- アプリのベースとなるスタイルテーマ -->
	<style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
		<!--リビジョン22.1を使用している場合は、windowNoTitle を使用してください。アンドロイドなし-->
		<item name="windowNoTitle">true</item>
		
		<!--ツールバーを使用するので、アクションバーを表示する必要はありません-->
		<item name="windowActionBar">false</item>

		<!-- テーマの色を [https://aka.ms/material-colors ] から設定する -->
		<!--色Primary は、既定のアクション バーの背景に使用されます -->
		<item name="colorPrimary">@color/primary</item>

		<!-- テーマの色を [https://aka.ms/material-colors ] から設定する -->
		<!--色Primary は、既定のアクション バーの背景に使用されます -->
		<item name="colorPrimaryDark">@color/primaryDark</item>
		<!--色アクセントは、ウィジェットの色合いに使用されるカラーコントロールの既定値として使用されます -->

		<!-- ボタンの色 -->
		<item name="colorAccent">@color/accent</item>

		<!-- テキストの色？ -->
		<item name="android:textColorPrimary">@color/black</item>

		<!-- とりあえず、 -->
		<item name="android:colorActivatedHighlight">@android:color/transparent</item>

		<!--あなたはまた、色を設定することができますコントロール通常、コントロールコントロールアクティブなコントロールコントロールハイライトと色スイッチサムノーマル.-->
		<item name="windowActionModeOverlay">true</item>

		<item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>

		<!-- ToolBarのタイトルテキスト色 -->
		<item name="android:textColorPrimary">@color/white</item>

		<!-- 入力領域の下線色 -->
		<item name="android:textColorSecondary">#c71585</item>

		<!-- アクションバーメニューの文字色 -->
		<item name="android:actionMenuTextColor">@color/white</item>

		<!-- オーバーフローメニュのテーマ定義 -->
		<item name="android:dropDownListViewStyle">@style/OverrFlowMenuStyle</item>
		<!-- オーバーフローメニューのテキスト色 -->
		<item name="android:textColor">@color/black</item>
	</style>

	<!-- オーバーフローメニュースタイル -->
	<style name="OverrFlowMenuStyle" parent="android:style/Widget.Holo.ListView.DropDown">
		<item name="android:background">@color/white</item>
	</style>

	<style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
		<item name="colorAccent">#FF4081</item>
	</style>
	<!-- スプラッシュスクリーンのテーマ -->
	<style name="Theme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowActionBar">false</item>
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowBackground">@drawable/bg_color</item>
	</style>
